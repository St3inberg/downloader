<Window x:Class="YouTubeDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YouTube Downloader" Height="600" Width="900"
        MinHeight="500" MinWidth="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- URL Input Section -->
        <GroupBox Grid.Row="0" Header="Download Settings" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- URL Input -->
                <Label Grid.Row="0" Grid.Column="0" Content="YouTube URL:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="UrlTextBox" 
                         VerticalAlignment="Center" Height="30"/>
                <Button Grid.Row="0" Grid.Column="2" x:Name="AddToQueueButton" 
                        Content="Add to Queue" Click="AddToQueueButton_Click" Height="30"/>

                <!-- Format Selection -->
                <Label Grid.Row="1" Grid.Column="0" Content="Download Type:" VerticalAlignment="Center"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <ComboBox x:Name="DownloadTypeComboBox" Width="150" Height="30"
                              SelectionChanged="DownloadTypeComboBox_SelectionChanged">
                        <ComboBoxItem Content="Video" IsSelected="True"/>
                        <ComboBoxItem Content="Audio Only"/>
                    </ComboBox>
                    
                    <ComboBox x:Name="QualityComboBox" Width="150" Height="30" Margin="10,5,5,5">
                        <ComboBoxItem Content="Best Quality" IsSelected="True"/>
                        <ComboBoxItem Content="1080p"/>
                        <ComboBoxItem Content="720p"/>
                        <ComboBoxItem Content="480p"/>
                        <ComboBoxItem Content="360p"/>
                    </ComboBox>
                    
                    <ComboBox x:Name="AudioFormatComboBox" Width="150" Height="30" 
                              Visibility="Collapsed">
                        <ComboBoxItem Content="MP3" IsSelected="True"/>
                        <ComboBoxItem Content="AAC"/>
                        <ComboBoxItem Content="WAV"/>
                    </ComboBox>
                </StackPanel>

                <!-- Destination Folder -->
                <Label Grid.Row="2" Grid.Column="0" Content="Save To:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="DestinationTextBox" 
                         IsReadOnly="True" VerticalAlignment="Center" Height="30"/>
                <Button Grid.Row="2" Grid.Column="2" Content="Browse..." 
                        Click="BrowseButton_Click" Height="30"/>
            </Grid>
        </GroupBox>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button x:Name="StartDownloadButton" Content="Start Downloads" 
                    Click="StartDownloadButton_Click" Width="120"/>
            <Button x:Name="PauseButton" Content="Pause" 
                    Click="PauseButton_Click" Width="120" IsEnabled="False"/>
            <Button x:Name="ClearQueueButton" Content="Clear Queue" 
                    Click="ClearQueueButton_Click" Width="120"/>
        </StackPanel>

        <!-- Download Queue -->
        <GroupBox Grid.Row="2" Header="Download Queue" Padding="5" Margin="0,5,0,0">
            <DataGrid x:Name="DownloadQueueGrid" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="True"
                      SelectionMode="Single"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*" MinWidth="200"/>
                    <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="80"/>
                    <DataGridTextColumn Header="Quality" Binding="{Binding Quality}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                    <DataGridTemplateColumn Header="Progress" Width="200">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <ProgressBar Value="{Binding Progress}" 
                                           Height="20" Minimum="0" Maximum="100"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="Size" Binding="{Binding Size}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Status Bar -->
        <StatusBar Grid.Row="3" Height="25">
            <StatusBarItem>
                <TextBlock x:Name="StatusTextBlock" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="ActiveDownloadsTextBlock" Text="Active Downloads: 0"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
